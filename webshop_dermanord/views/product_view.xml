        <record id="product_normal_form_view" model="ir.ui.view">
            <field name="name">product.product.form.inherited.webshop_dermanord</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field name="arch" type="xml">
                <group name="sale" position="after">
                    <group name="dn_tester" string="Tester">
                        <field name="has_tester" />
                        <field name="tester_product_id" attrs="{'invisible': [('has_tester', '=', False)]}" />
                        <field name="tester_min" attrs="{'invisible': [('has_tester', '=', False)]}" />
                    </group>
                </group>
            </field>
        </record>
        <record id="product_template_only_form_view_dv" model="ir.ui.view">
            <field name="name">product.template.form.inherited.webshop_dermanord</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">
                <field name="barcode" position="after">
                    <group name="default_variant" string="Default Variant">
                        <field name="dv_id" />
                        <field name="dv_default_code" />
                        <field name="dv_description_sale" />
<!--
                        <field name="dv_image_src" />
-->
                        <field name="dv_name" />
                        <field name="dv_ribbon" />
                    </group>
                </field>
            </field>
        </record>
    </data>
